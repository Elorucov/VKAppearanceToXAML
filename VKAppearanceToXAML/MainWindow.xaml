<Window x:Class="VKAppearanceToXAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VKAppearanceToXAML"
        mc:Ignorable="d"
        Title="VK Appearance to XAML" Height="480" Width="360" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="6,3,6,6" TextWrapping="Wrap" Text="Эта программа сгенерирует файл ресурсов с цветами из VK Appearance в формате XAML для использования его в проектах UWP.   ©2019-2020 ELOR."/>
        <TextBox x:Name="ProcessLog" Grid.Row="1" Margin="6" Padding="3" BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True" FontSize="12" FontFamily="Consolas"/>
        <Button x:Name="StartButton" Grid.Row="2" Margin="6" Content="Запустить!" Click="StartButton_Click"/>
    </Grid>
</Window>
